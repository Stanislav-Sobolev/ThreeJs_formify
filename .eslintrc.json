{
    "extends": ["airbnb", "prettier"],
    "env": {
        "browser": true,
        "node": true,
        "jest": true
    },
    "parserOptions": {
        "ecmaVersion": 11,
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "impliedStrict": true,
            "classes": true
        }
    },
    "plugins": [
        "prettier"
    ],
    "rules": {
        "semi": [2, "always"],
        "import/no-extraneous-dependencies": ["error", {"devDependencies": false, "optionalDependencies": false, "peerDependencies": false}],
        "prettier/prettier": "error"
    }
}